@model Authn.Models.Repair

@{
    ViewData["Title"] = "Search";
}
<h1>Search</h1>

<h4>Please enter your repair id to find details about it</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessSearch">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" id="selectRepair" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div id="repairInformationArea">
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
